<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_levels"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/background_levels"
   	android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   		android:paddingTop="@dimen/icon_vertical_margin"
   		android:paddingLeft="@dimen/icon_horizontal_margin"
   		android:paddingRight="@dimen/icon_horizontal_margin"
    	android:layout_gravity="center"
    	android:gravity="center" >
        
		<TextView
			android:id="@+id/textViewTitleLevels"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
    		android:paddingTop="@dimen/icon_vertical_margin"
			android:gravity="center"
			android:text="@string/button_levels"
			android:textColor="@color/white"
			android:textSize="32sp"
			android:textStyle="bold" />
		
        <Button
            android:id="@+id/btBackLevels"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
    		android:layout_alignParentRight="true"
	        android:background="@drawable/back"
            android:onClick="onClickBack" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
   		android:gravity="center"
    	android:orientation="horizontal" >

        <GridView
            android:id="@+id/gridviewLevels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" >
        </GridView>
	    
    </LinearLayout>
</LinearLayout>